<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    
        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DADADA"
        />

    <RadioGroup
        android:id="@+id/rg_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_my_files"
            style="@style/main_riado_button"
            android:drawableTop="@drawable/tab_cloudfile"
            android:text="我的文件" />

        <RadioButton
            android:id="@+id/rb_others_share"
            style="@style/main_riado_button"
            android:drawableTop="@drawable/tab_sharefile"
            android:text="内部共享" />

        <RadioButton
            android:id="@+id/rb_transfer_list"
            style="@style/main_riado_button"
            android:drawableTop="@drawable/tab_transferlist"
            android:text="传输列表" />

        <RadioButton
            android:id="@+id/rb_personal_center"
            style="@style/main_riado_button"
            android:drawableTop="@drawable/tab_personalcenter"
            android:text="个人中心" />

    </RadioGroup>

  








</LinearLayout>