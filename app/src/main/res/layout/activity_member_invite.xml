<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.member.MemberInviteActivity"
    android:background="@color/root_linealayout_bg_color"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_head"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫一扫加入企业"
                android:textColor="#474C5F"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                />
        <include layout="@layout/common_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人均容量"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_cap"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:textColor="#474C5F"
                tools:text="1G"/>
            
        </LinearLayout>
        <include layout="@layout/common_line"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="链接有效期"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_indate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:textColor="#474C5F"
                tools:text="2020/02/12"/>

        </LinearLayout>
        
        
        
    </LinearLayout>

        <TextView
            android:id="@+id/tv_link_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/app_color"
            android:layout_marginTop="50dp"
            android:text="分享邀请链接"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/ll_update_invite"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit_link"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="修改" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="删除" />

    </LinearLayout>
    

</LinearLayout>