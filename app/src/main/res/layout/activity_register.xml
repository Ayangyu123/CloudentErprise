<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.RegisterActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_head"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"

        >
        <TextView
            android:text="公司名称"
            android:layout_width="100dp"
            android:gravity="center_vertical|left"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et_comp_name"
            android:text="@string/test"
            style="@style/register_edittext_style" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:text="公司联系邮箱"
            android:gravity="center_vertical|left"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et_comp_con_email"
            android:text="@string/test_email"
            style="@style/register_edittext_style"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:text="公司联系电话"
            android:gravity="center_vertical|left"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et_comp_con_tel"
            android:text="@string/test"
            style="@style/register_edittext_style"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp"
        >
        <TextView
            android:layout_width="100dp"
            android:text="密码"
            android:gravity="center_vertical|left"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et_user_password"
            android:text="@string/test"
            style="@style/register_edittext_style"/>

    </LinearLayout>

        <TextView
            android:id="@+id/tv_register"
            android:text="注册"
            android:onClick="register"
            android:background="@color/app_color"
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textColor="@android:color/white"

            />
    <TextView
        android:text="gettoken(登陆)"
        android:onClick="GetToken"
        android:visibility="gone"
        android:background="@color/colorAccent"
        style="@style/TV_Action" />

    <TextView
        android:id="@+id/tv_result"
        style="@style/TV_ShowResult"
        />


    <TextView
        android:id="@+id/To_TeamActivity"
        android:visibility="gone"
        style="@style/TV_To_Activity"
        android:onClick="ToTeamActivity"
        android:text="AddTeamActivity" />


</LinearLayout>
</LinearLayout>