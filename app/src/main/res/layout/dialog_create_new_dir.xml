<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.MyFilesFragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/bg_create_new_dir_dialog"
    >


    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="新建文件夹"
        android:textColor="#333"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/et_dir_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="16dp"
        android:maxLength="20"
        android:background="@drawable/bg_create_new_dir_dialog_edittext"
        android:ellipsize="start"
        android:hint="新建文件夹"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="#333"
        android:textColorHint="#999"
        android:textSize="18dp"
        tools:text="12342433u4563487" />
    <CheckBox
        android:id="@+id/checkbox_is_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="  设置为共享文件夹"
        android:visibility="gone"
        android:maxLines="1"
        android:checked="false"
        android:button="@drawable/checkbox"
        android:gravity="center_vertical"
        android:textSize="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="#E9E9E9"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="#333"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E9E9E9"
            />
        <TextView
            android:id="@+id/tv_commit"
            android:text="创建"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="#2864DE"
            />

    </LinearLayout>



</LinearLayout>