<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ForgetPasswordActivity">

    <include
        android:id="@+id/include"
        layout="@layout/common_head"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="20dp"
        >
        <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="手机号"
        />
        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入要找回账号的手机号"
            android:inputType="phone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="20dp"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"

            android:text="验证码"
            />
        <EditText
            android:id="@+id/editText_verification_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:ems="6"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"/>
        <TextView
           android:id="@+id/tv_send_reset_password_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:onClick="getVerifcationCode"
            android:background="@color/app_color"
            android:textColor="@android:color/white"
            android:text="获取验证码"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重置密码"
        android:onClick="verifyMessageCode"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:background="@color/app_color"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal" />


</LinearLayout>