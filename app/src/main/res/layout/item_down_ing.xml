<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    >
    <ImageView
        android:id="@+id/iv_file_type"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_list_folder"
        android:layout_gravity="center_vertical"
        />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center_vertical"
                tools:text="文件名称"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_curr_size"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    tools:text="currsize/文件size"/>
                <TextView
                    android:id="@+id/tv_down_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    tools:text="暂停下载"/>

            </LinearLayout>



        </LinearLayout>
   <FrameLayout
       android:id="@+id/fl_down"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_margin="10dp"
       android:layout_gravity="center_vertical"
       >
       <ProgressBar
           android:id="@+id/progress_download"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:max="100"
           android:progress="0"
           />
       <ImageView
           android:id="@+id/iv_down_flag"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/redownload"
           android:gravity="center_vertical"
           android:scaleType="center"
           />
   </FrameLayout>
    <CheckBox
        android:id="@+id/checkbox_is_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="14dp"
        android:button="@drawable/checkbox"
        android:visibility="gone" />

</LinearLayout>